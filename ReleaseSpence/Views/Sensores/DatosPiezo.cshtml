                @Html.ValidationMessageFor(model => model.coefC)
            </td>
            <td>
                @Html.EditorFor(model => model.coefC)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.tempK, new { @class = "control-label" })<br />
                @Html.ValidationMessageFor(model => model.tempK)
            </td>
            <td>
                @Html.EditorFor(model => model.tempK)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.metrosSensor, new { @class = "control-label" })<br />
                @Html.ValidationMessageFor(model => model.metrosSensor)
            </td>
            <td>
                @Html.EditorFor(model => model.metrosSensor)
            </td>
        </tr>

        <tr>
            <td colspan="4">
                @Html.ActionLink("Volver", "Index", "Sensores", new { }, new { @class = "btn btn-primary" })
                <input type="submit" id="enviar" class="btn btn-warning" value="Corregir">
            </td>
        </tr>
    </table>
    }
</div>